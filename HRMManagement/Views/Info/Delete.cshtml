@if (Model != null)
{
    <dic>
        <div class="">
            <div class="">
                <div class="row">
                    <div class="col-sm-4 p-3">
                        <div class="container mt-3">
                            <div class="card" style="max-width: 400px;">
                                <img class="card-img-top" src="/profileimages/@(Model.Id).jpg" alt="Profile image" style="width:100%" ; height="400px" onerror="this.onerror=null; this.src='/profileimages/default.jpg';">
                                <div class="card-body">
                                    <h4 class="card-title" style="font-weight:bold">@Model.HoDem @Model.Ten</h4>
                                    <p class="card-text" style="font-size:large">@Model.TenChucVu @Model.TenPhongBan</p>
                                    <p class="card-text" style="font-size:medium;">@Model.TenVitri</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-8 p-3">
                        <div class="info" style="max-width: 900px;">
                            <div class="info-title">
                                <h2 style="text-align: center; padding-top: 20px;">Thông Tin Cá Nhân</h2>
                            </div>

                            <div class="info-body"
                                 style="background-color:ghostwhite; border: solid; border-style: outset; margin-left: inherit ">
                                <hr>
                                <div class="row" style=" margin-left: inherit">
                                    <div class="col-sm-4">Họ Tên:</div>
                                    <div class="col-sm-8">@Model.HoDem @Model.Ten</div>
                                </div>
                                <hr>
                                <div class="row" style=" margin-left: inherit">
                                    <div class="col-sm-4">Ngày Sinh:</div>
                                    <div class="col-sm-8">
                                        @Model.NgaySinh.ToString().Substring(0,10)
                                    </div>
                                </div>
                                <hr>
                                <div class="row" style=" margin-left: inherit">
                                    <div class="col-sm-4">Giới Tính:</div>
                                    <div class="col-sm-8">
                                        @if (Model.GioiTinh == true)
                                        {
                                            <span>Nam</span>
                                        }
                                        else
                                        {
                                            <span>Nu</span>
                                        }
                                    </div>
                                </div>
                                <hr>
                                <div class="row" style=" margin-left: inherit">
                                    <div class="col-sm-4">CCCD:</div>
                                    <div class="col-sm-8">@Model.Cccd</div>
                                </div>
                                <hr>
                                <div class="row" style=" margin-left: inherit">
                                    <div class="col-sm-4">Địa chỉ:</div>
                                    <div class="col-sm-8">@Model.DiaChi</div>
                                </div>
                                <hr>
                                <div class="row" style=" margin-left: inherit">
                                    <div class="col-sm-4">SDT:</div>
                                    <div class="col-sm-8">@Model.Sdt</div>
                                </div>
                                <hr>
                                <div class="row" style=" margin-left: inherit">
                                    <div class="col-sm-4">Email:</div>
                                    <div class="col-sm-8">@Model.Email</div>
                                </div>
                                <hr>
                            </div>
                            <br>
                            <form asp-controller="Info" asp-action="DeleteConfirmed" method="post" style="text-align: center">
                                <input type="hidden" asp-for="Id" />
                                <p style="color: red; font-size:large; text-decoration:underline; text-align:center">Bạn có chắc muốn xóa nhân viên này?</p>
                                <button type="submit" class="btn btn-danger" style="padding: 12px 20px; width: 20%; font-size: medium;">Xóa</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </dic>
}
